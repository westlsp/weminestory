/**index.wxss**/

.userinfo {
  position: relative;
  background: #d6e1f3;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.logo_wai{
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 4;
  font-size: 40rpx;
}
.logo{
  background: white;
  height:200rpx;
  width: 200rpx;
  position: relative;
  border-radius: 20rpx;
  border: 1rpx solid #a8a9a9;
}
.antn_wai{
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  flex: 6;
}
.btn_wai{
  position: relative;
  top:0;
  height:100rpx;
  width:200rpx;
  margin:0 auto;
  background: white;
  border-radius: 10rpx;
  border: 1rpx solid #a8a9a9;
}
.btn_bck{
  position: absolute;
  height:100%;
  width:0;
  border-radius: 10rpx;
}
.btn_bck1{
  position: absolute;
  height:100%;
  width: 100%;
  border-radius: 10rpx;
  background: #29dd75;
}
.btn_font{
  position: absolute;
  height:100%;
  width:100%;
  border-radius: 10rpx;
  background-color: rgba(255,255,255,0);
  display:flex;
  justify-content: center;
  align-items: center;
}
.btn{
  position: absolute;
  background-color: rgba(255,255,255,0);
  height:100%;
  width:100%;
  border-radius: 10rpx;
}
