.header{
  display: flex;
  flex:1;
  width:100%;
  position: relative;
  background: #c62f2f;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid #e1e1e2;
}
.midder{
  flex: 9;
  width:100%;
  display: flex;
  flex-direction: column;
  position: relative;
  background:#fafafa;
  overflow-y: scroll;
  overflow-x: hidden;
}
.toupiao_item{
  height:10%;
  width: 100%;
  display: flex;
  flex-direction: row;
  position: relative;
  background:#fafafa;
  border-bottom: 1rpx solid #e1e1e2;
}
.item_text{
  flex:4;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 30rpx;
  position: relative;
}
.item_text text{
  font-size: 30rpx;
  position: relative;
}
.item_btn{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.item_btn view{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height:40rpx;
  width: 80rpx;
  border-radius: 10rpx;
  border: 1rpx solid #e1e1e2;
  font-size: 26rpx;
}
.mine_btn{
  color: #e1e1e2;
}
.footer{
  position: fixed;
  bottom: 0;
  height:10%;
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
  border-top:1rpx solid #e1e1e2; 
}